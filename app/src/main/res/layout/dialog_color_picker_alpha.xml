<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seekBarRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progressDrawable="@drawable/pref_dialog_color_picker_seekbar_red"
        android:thumb="@drawable/pref_color_picker_seekbar_thumb" />

    <SeekBar
        android:id="@+id/seekBarGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progressDrawable="@drawable/pref_dialog_color_picker_seekbar_green"
        android:thumb="@drawable/pref_color_picker_seekbar_thumb" />

    <SeekBar
        android:id="@+id/seekBarBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progressDrawable="@drawable/pref_dialog_color_picker_seekbar_blue"
        android:thumb="@drawable/pref_color_picker_seekbar_thumb" />

    <SeekBar
        android:id="@+id/seekBarAlpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:progressDrawable="@drawable/pref_dialog_color_picker_seekbar_alpha"
        android:thumb="@drawable/pref_color_picker_seekbar_thumb" />
</LinearLayout>